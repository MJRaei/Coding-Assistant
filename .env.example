# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
GOOGLE_API_KEY="YOUR_GOOGLE_API_KEY"

# Model Configuration (Optional - defaults will be used if not set)
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
DEFAULT_CHAT_MODEL=gpt-4o-mini

# Data Storage Paths (Optional - defaults to ./data if not set)
CODE_RAG_DATA_DIR=./data
CODE_RAG_INDICES_DIR=./data/indices
CODE_RAG_LOGS_DIR=./data/logs

# Chunking Configuration (Optional)
DEFAULT_MAX_TOKENS=2000
DEFAULT_OVERLAP_TOKENS=200

# Search Configuration (Optional)
DEFAULT_SEARCH_K=5
DEFAULT_MAX_CHUNKS_FOR_CONTEXT=5

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FILE=./data/logs/code_rag.log

# File Processing Configuration (Optional)
# Comma-separated list of directories to exclude
EXCLUDED_DIRS=__pycache__,.git,.pytest_cache,node_modules,.venv,venv,.env,dist,build,.idea,.vscode

# Comma-separated list of file extensions to include
INCLUDED_EXTENSIONS=.py,.md,.txt,.yml,.yaml,.json,.sql,.js,.ts,.jsx,.tsx,.css,.scss,.html,.xml,.toml,.cfg,.ini

# Rate Limiting (Optional)
OPENAI_BATCH_SIZE=100
OPENAI_RATE_LIMIT_DELAY=0.1

# Development/Debug Settings (Optional)
DEBUG_MODE=false
VERBOSE_LOGGING=false